---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import RecipeCard from "../../components/RecipeCard";
import { EventMap } from "../../components/EventMap";
import { useTranslations } from "../../utils/i18n";
import { Image } from "astro:assets";
import { getNextDIDayInfo } from "../../utils/diday";
import heroImage from "../../assets/hero1.jpg";
import { LOCALES } from "../../consts";
import { getEntry } from "astro:content";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const recipesData = (await getEntry("recipes", lang))?.data.recipes || [];
const featuredRecipes = recipesData.slice(0, 6).map((recipe: any) => ({
  id: `${lang}/${recipe.id}`,
  data: {
    title: recipe.title,
    description: recipe.description,
    heroImage: recipe.heroImage,
  },
}));

// Get next DI.DAY date
const { formatted: nextDIDayDate } = getNextDIDayInfo(lang);
const heroSubtitle = lang === "de"
  ? `Am ${nextDIDayDate} findet der nächste DI.DAY statt`
  : `The next DI.DAY will take place on ${nextDIDayDate}`;
---

<BaseLayout
  lang={lang}
  title={lang === "en"
    ? `Digital Independence Day | ${t.home.hero_title}`
    : undefined}
>
  <section
    class="relative bg-gradient-to-br from-primary-600 to-accent-600 text-white py-20 overflow-hidden"
  >
    <!-- Hero background image -->
    <div class="absolute inset-0 opacity-20">
      <Image
        src={heroImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>

    <!-- Content overlay -->
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-display font-bold mb-6">
        {t.home.hero_title}
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-primary-100">
        {heroSubtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getRelativeLocaleUrl(lang, "recipes")}
          class="px-8 py-4 bg-white text-primary-600 rounded-lg font-semibold hover:bg-primary-50 transition-colors shadow-lg"
        >
          {t.home.hero_cta_recipes}
        </a>
        <a
          href={getRelativeLocaleUrl(lang, "motivation")}
          class="px-8 py-4 bg-primary-700 text-white rounded-lg font-semibold hover:bg-primary-800 transition-colors"
        >
          {t.home.hero_cta_alternatives}
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-accent-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">
          {lang === "de" ? "Der nächste Digital Independence Day" : "Next Digital Independence Day"}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">
          {lang === "de"
            ? "Am ersten Sonntag jeden Monats ermutigen wir dich, einen Schritt zu digitaler Unabhängigkeit zu machen. Entdecke unsere Wechselrezepte und kleine Tipps."
            : "On the first Sunday of every month, we encourage you to take a step toward digital independence. Discover our switch recipes and tips."}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        {
          featuredRecipes.map((recipe) => (
            <RecipeCard
              recipe={recipe}
              seeText={t.recipe.see}
              href={getRelativeLocaleUrl(lang, `recipes/${recipe.id.split("/")[1]}`)}
              client:load
            />
          ))
        }
      </div>

      <div class="text-center">
        <a
          href={getRelativeLocaleUrl(lang, "recipes")}
          class="inline-flex items-center text-primary-600 dark:text-primary-400 font-semibold hover:underline text-lg"
        >
          {t.home.featured_all}
        </a>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">
            {t.home.why_title}
          </h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-400">
            <p>
              {t.home.why_p1}
            </p>
            <p>
              {t.home.why_p2}
            </p>
          </div>
          <div class="mt-8">
            <a
              href={getRelativeLocaleUrl(lang, "motivation")}
              class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
            >
              {t.home.why_cta}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold mb-4">
          {t.home.events_title}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">
          {t.home.events_desc}
        </p>
      </div>
      <EventMap lang={lang} client:load />
    </div>
  </section>

  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">
        {t.home.together_title}
      </h2>
      <p
        class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto"
      >
        {t.home.together_desc}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getRelativeLocaleUrl(lang, "support")}
          class="px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
        >
          {t.home.together_cta}
        </a>
        <a
          href={getRelativeLocaleUrl(lang, "motivation")}
          class="px-6 py-3 border-2 border-primary-600 text-primary-600 dark:text-primary-400 rounded-lg font-semibold hover:bg-primary-50 dark:hover:bg-primary-950 transition-colors"
        >
          {t.home.talk_cta}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

