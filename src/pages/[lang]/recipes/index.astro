---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import RecipeCard from "../../../components/RecipeCard";
import { getCollection } from "astro:content";
import { useTranslations } from "../../../utils/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
import { LOCALES } from "../../../consts";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const recipes = (await getCollection("recipes")).filter(
  (recipe) => recipe.id.split("/")[0] === lang
);
---

<BaseLayout
  lang={lang}
  title={`${t.recipes_index.title} | Digital Independence Day`}
  description={t.recipes_index.desc}
>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-4">
        {t.recipes_index.title}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {t.recipes_index.desc}
      </p>
    </header>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
      transition:animate="fade"
    >
      {
        recipes.map((recipe) => (
          <RecipeCard
            recipe={recipe}
            seeText={t.recipe.see}
            href={getRelativeLocaleUrl(
              lang,
              `recipes/${recipe.id.replace(new RegExp(`^${lang}/`), "").replace(/\.md$/, "")}`
            )}
            client:load
          />
        ))
      }
    </div>
  </div>
</BaseLayout>
