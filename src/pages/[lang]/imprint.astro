---
import { LOCALES } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getEntry, render } from "astro:content";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const entry = await getEntry("pages", `${lang}/imprint`);
if (!entry) return Astro.redirect("/404");
const { Content } = await render(entry);
---

<BaseLayout
  lang={lang}
  title={`${entry.data.title} | Digital Independence Day`}
  description={entry.data.description}
>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
  .prose :global(h1) {
    @apply text-4xl font-display font-bold mb-8 text-gray-900 dark:text-gray-100;
  }

  .prose :global(h2) {
    @apply text-2xl font-display font-bold mt-8 mb-4 text-gray-900 dark:text-gray-100;
  }

  .prose :global(p) {
    @apply mb-4 text-gray-700 dark:text-gray-300;
  }
</style>
