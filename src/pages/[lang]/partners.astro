---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getEntry, render } from "astro:content";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../../utils/i18n";
import partners from "../../data/partners.json";

export function getStaticPaths() {
  return [{ params: { lang: "de" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const t = useTranslations(lang);
const entry = await getEntry("pages", `${lang}/partners`);
if (!entry) return Astro.redirect("/404");
const { Content } = await render(entry);
---

<BaseLayout
  lang={lang}
  title={`${entry.data.title} | Digital Independence Day`}
  description={entry.data.description}
>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />

      <div class="mt-16">
        <h2 class="text-3xl font-display font-bold mb-8 text-center">
          {t.partners_page.partners_title || "Partner"}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            partners.map((partner) => (
              <div class="flex flex-col items-center text-center gap-4 p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-shadow h-full">
                <div class="w-full h-32 flex items-center justify-center p-4">
                  <img
                    src={partner.logo}
                    alt={partner.name}
                    class="max-w-full max-h-full w-auto h-auto object-contain"
                    loading="lazy"
                  />
                </div>
                <div class="w-full flex-grow flex items-center justify-center">
                  <h3 class="text-lg font-bold leading-tight text-gray-900 dark:text-gray-100">
                    {partner.name}
                  </h3>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="mt-12 p-6 bg-primary-50 dark:bg-primary-950 rounded-xl">
        <h3 class="text-xl font-bold mb-4">
          {t.partners_page.contact_title}
        </h3>
        <p>
          {t.partners_page.contact_p1}<br />
          <a
            href={getRelativeLocaleUrl(lang, "newsletter")}
            class="text-primary-600 dark:text-primary-400 hover:underline"
          >
            {t.partners_page.contact_cta}
          </a>
          {t.partners_page.contact_p2}
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .prose :global(h1) {
    @apply text-4xl font-display font-bold mb-8 text-gray-900 dark:text-gray-100;
  }

  .prose :global(h2) {
    @apply text-2xl font-display font-bold mt-8 mb-4 text-gray-900 dark:text-gray-100;
  }

  .prose :global(h3) {
    @apply text-xl font-semibold mt-6 mb-3 text-gray-900 dark:text-gray-100;
  }

  .prose :global(p) {
    @apply mb-4 text-gray-700 dark:text-gray-300;
  }

  .prose :global(ul) {
    @apply list-disc pl-6 space-y-2 mb-4;
  }

  .prose :global(li) {
    @apply text-gray-700 dark:text-gray-300;
  }

  .prose :global(a) {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }
</style>
