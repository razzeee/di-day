---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations } from "../../utils/i18n";

const lang = "en";
const t = useTranslations(lang);
---

<BaseLayout
  lang="en"
  title="Switch Together | Digital Independence Day"
  description="Digital independence is best achieved together."
>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <h1>Switch Together</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        Digital independence is best achieved together.
      </p>
      <p>
        This page is currently under construction. Here you will soon find
        information on how to connect with others to make the switch to
        privacy-friendly alternatives together.
      </p>
      <p>
        In the meantime, you can explore our <a href="/en/recipes">recipes</a>
        or <a href="/en/newsletter">subscribe to our newsletter</a> to stay updated.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .prose :global(h1) {
    @apply text-4xl font-display font-bold mb-8 text-gray-900 dark:text-gray-100;
  }
  .prose :global(p) {
    @apply mb-4 text-gray-700 dark:text-gray-300;
  }
  .prose :global(a) {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }
</style>
