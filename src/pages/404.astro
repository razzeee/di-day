---
import { getRelativeLocaleUrl } from "astro:i18n";
import BaseLayout from "../layouts/BaseLayout.astro";
import de from "../i18n/de.json";
import en from "../i18n/en.json";

// Detect language from URL or use default
const path = Astro.url.pathname;
const lang = path.startsWith("/en") ? "en" : "de";
const ui = { de, en };
const t = ui[lang as "de" | "en"] || de;
---

<BaseLayout
  lang={lang}
  title={`${t.not_found.title} | Digital Independence Day`}
  description={t.not_found.description}
>
  <div class="container mx-auto px-4 py-20 max-w-2xl">
    <div class="flex flex-col items-center justify-center text-center">
      <h1 class="text-6xl font-display font-bold mb-4 text-gray-900 dark:text-gray-100 animate-in fade-in slide-in-from-top-2 duration-600">
        404
      </h1>
      <p class="text-2xl font-display font-semibold mb-4 text-gray-700 dark:text-gray-300 animate-in fade-in slide-in-from-bottom-2 duration-600 delay-100">
        {t.not_found.title}
      </p>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md animate-in fade-in slide-in-from-bottom-2 duration-600 delay-200">
        {t.not_found.description}
      </p>
      <div class="flex gap-4">
        <a
          href={getRelativeLocaleUrl(lang, "/")}
          class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors animate-in fade-in slide-in-from-bottom-2 duration-600 delay-300"
        >
          {t.not_found.home}
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
