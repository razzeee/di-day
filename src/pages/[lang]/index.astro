---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import RecipeCard from "../../components/RecipeCard";
import NewsletterForm from "../../components/NewsletterForm";
import { getCollection } from "astro:content";
import { useTranslations } from "../../utils/i18n";
import { Image } from "astro:assets";
import heroImage from "../../assets/hero1.jpg";
import { LOCALES } from "../../consts";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);

const recipes = (await getCollection("recipes")).filter(
  (recipe) => recipe.data.lang === lang
);
const featuredRecipes = recipes.slice(0, 3);
---

<BaseLayout
  lang={lang}
  title={lang === "en"
    ? `Digital Independence Day | ${t.home.hero_title}`
    : undefined}
>
  <section
    class="relative bg-gradient-to-br from-primary-600 to-accent-600 text-white py-20 overflow-hidden"
  >
    <!-- Hero background image -->
    <div class="absolute inset-0 opacity-20">
      <Image
        src={heroImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
    </div>

    <!-- Content overlay -->
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-display font-bold mb-6">
        {t.home.hero_title}
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-primary-100">
        {t.home.hero_subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getRelativeLocaleUrl(lang, "recipes")}
          class="px-8 py-4 bg-white text-primary-600 rounded-lg font-semibold hover:bg-primary-50 transition-colors shadow-lg"
        >
          {t.home.hero_cta_recipes}
        </a>
        <a
          href={getRelativeLocaleUrl(lang, "alternatives")}
          class="px-8 py-4 bg-primary-700 text-white rounded-lg font-semibold hover:bg-primary-800 transition-colors"
        >
          {t.home.hero_cta_alternatives}
        </a>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-center mb-12">
        {t.home.featured_title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredRecipes.map((recipe) => (
            <RecipeCard
              recipe={recipe}
              seeText={t.recipe.see}
              href={getRelativeLocaleUrl(
                lang,
                `recipes/${recipe.id.replace(new RegExp(`^${lang}/`), "").replace(/\.md$/, "")}`
              )}
              client:load
            />
          ))
        }
      </div>
      <div class="text-center mt-12">
        <a
          href={getRelativeLocaleUrl(lang, "recipes")}
          class="inline-flex items-center text-primary-600 dark:text-primary-400 font-semibold hover:underline"
        >
          {t.home.featured_all}
        </a>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">
            {t.home.why_title}
          </h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-400">
            <p>
              {t.home.why_p1}
            </p>
            <p>
              {t.home.why_p2}
            </p>
          </div>
          <div class="mt-8">
            <a
              href={getRelativeLocaleUrl(lang, "faqs")}
              class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
            >
              {t.home.why_cta}
            </a>
          </div>
        </div>
        <div>
          <NewsletterForm
            t={t.newsletter}
            privacyUrl={getRelativeLocaleUrl(lang, "privacy")}
            client:load
          />
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-6">
        {t.home.together_title}
      </h2>
      <p
        class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto"
      >
        {t.home.together_desc}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={getRelativeLocaleUrl(lang, "together")}
          class="px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-colors"
        >
          {t.home.together_cta}
        </a>
        <a
          href={getRelativeLocaleUrl(lang, "talkaboutit")}
          class="px-6 py-3 border-2 border-primary-600 text-primary-600 dark:text-primary-400 rounded-lg font-semibold hover:bg-primary-50 dark:hover:bg-primary-950 transition-colors"
        >
          {t.home.talk_cta}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
