---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import romeImage from "../../assets/rome.jpg";
import { LOCALES, DEFAULT_LOCALE } from "@/consts.ts";
import { getCollection } from "astro:content";
import { remark } from "remark";
import html from "remark-html";
import { ExternalLink, Link } from "lucide-react";
import FallbackBanner from "@/components/FallbackBanner.astro";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const snacksCollection = await getCollection("snacks");
let snacksItem = snacksCollection.find((item) => item.id === lang);
let isFallback = false;

if (!snacksItem && lang !== DEFAULT_LOCALE) {
  snacksItem = snacksCollection.find((item) => item.id === DEFAULT_LOCALE);
  if (snacksItem) {
    isFallback = true;
  }
}

if (!snacksItem) return Astro.redirect("/404");

const data = snacksItem.data;

async function markdownToHtml(markdown: string): Promise<string> {
  if (!markdown) return "";
  const processed = await remark().use(html).process(markdown);
  return processed.toString();
}

const processedGroups = await Promise.all(
  data.groups.map(async (group) => ({
    ...group,
    descriptionHtml: group.description
      ? await markdownToHtml(group.description)
      : "",
  })),
);
---

<BaseLayout
  lang={lang}
  title={`${data.title} | Digital Independence Day`}
  description={data.description}
>
  <section
    class="relative bg-gradient-to-br from-primary-600 to-accent-600 text-white py-16 overflow-hidden"
  >
    <div class="absolute inset-0 opacity-30">
      <Image src={romeImage} alt="" class="w-full h-full object-cover" />
    </div>
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-4">
        {data.title}
      </h1>
      <p class="text-xl text-primary-100">
        {data.description}
      </p>
    </div>
  </section>

  <div class="container mx-auto px-4 py-12 max-w-5xl">
    {isFallback && <FallbackBanner lang={lang} />}
    <div class="space-y-8">
      {
        processedGroups.map((group) => (
          <section id={group.id} class="space-y-4 scroll-mt-24">
            <div class="space-y-2">
              <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-gray-100 pb-3 border-b-2 border-primary-200 dark:border-primary-700 group flex items-center gap-2">
                <a
                  href={`#${group.id}`}
                  class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                >
                  {group.title}
                </a>
                <Link className="w-4 h-4 opacity-0 group-hover:opacity-50 transition-opacity text-primary-600 dark:text-primary-400" />
              </h2>
              {group.descriptionHtml && (
                <div class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed prose-links">
                  <Fragment set:html={group.descriptionHtml} />
                </div>
              )}
            </div>
            <div class="space-y-3">
              {group.items.map((item) => (
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-5 border-l-4 border-primary-500 hover:border-accent-500">
                  <div class="space-y-3">
                    <div>
                      <h3 class="font-display font-semibold text-gray-900 dark:text-gray-100 mb-1">
                        {item.title}
                      </h3>
                      <p class="text-sm text-gray-700 dark:text-gray-300">
                        {item.content}
                      </p>
                    </div>
                    {item.link && (
                      <a
                        href={item.link.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold text-xs whitespace-nowrap transition-colors"
                      >
                        {item.link.text}
                        <ExternalLink className="w-3 h-3" />
                      </a>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </section>
        ))
      }
    </div>
  </div>
</BaseLayout>
