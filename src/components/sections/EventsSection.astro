---
import { ArrowRight } from "lucide-react";
import { EventMap } from "../EventMap";

interface Props {
  lang: string;
  title: string;
  description: string;
  ctaLabel: string;
}

const { lang, title, description, ctaLabel } = Astro.props;
---

<section
  class="py-24 md:py-32 bg-gradient-to-br from-gray-50 via-white to-gray-50 dark:from-gray-900 dark:via-gray-950 dark:to-gray-900 relative overflow-hidden"
>
  <!-- Decorative elements -->
  <div
    class="absolute top-0 right-0 -mt-20 -mr-20 w-72 h-72 bg-accent-200 dark:bg-accent-900 rounded-full opacity-20 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -mb-20 -ml-20 w-72 h-72 bg-primary-200 dark:bg-primary-900 rounded-full opacity-20 blur-3xl"
  >
  </div>

  <div class="container mx-auto px-4 relative">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6">
        {title}
      </h2>

      <p
        class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed"
      >
        {description}
      </p>
    </div>

    <div class="mb-16">
      <div
        class="relative rounded-3xl overflow-hidden shadow-2xl border border-gray-200 dark:border-gray-800"
      >
        <EventMap lang={lang} client:load />
      </div>
    </div>

    <div class="text-center">
      <a
        href="https://termine.di.day"
        target="_blank"
        rel="noopener noreferrer"
        class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-accent-600 to-accent-700 text-white rounded-xl font-semibold hover:from-accent-700 hover:to-accent-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:scale-95"
      >
        <span>{ctaLabel}</span>
        <ArrowRight
          className="size-5 group-hover:translate-x-1 transition-transform"
        />
      </a>
    </div>
  </div>
</section>
