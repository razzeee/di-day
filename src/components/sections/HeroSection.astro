---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Image } from "astro:assets";
import heroImage from "../../assets/hero1.jpg";

interface Props {
  lang: string;
  title: string;
  subtitle: string;
  ctaRecipesLabel: string;
  ctaAlternativesLabel: string;
}

const { lang, title, subtitle, ctaRecipesLabel, ctaAlternativesLabel } =
  Astro.props;
---

<section
  class="relative bg-gradient-to-br from-primary-600 via-primary-500 to-accent-600 text-white pt-32 pb-40 overflow-hidden"
>
  <!-- Decorative gradient orbs with enhanced blur -->
  <div
    class="absolute top-0 right-0 -mt-40 -mr-40 w-96 h-96 bg-accent-400 rounded-full opacity-15 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -mb-40 -ml-40 w-96 h-96 bg-primary-400 rounded-full opacity-15 blur-3xl"
  >
  </div>
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full max-w-6xl rounded-full opacity-10 blur-3xl"
    style="background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);"
  >
  </div>

  <!-- Hero background image -->
  <div class="absolute inset-0 opacity-10">
    <Image
      src={heroImage}
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Content overlay -->
  <div class="relative container mx-auto px-4 text-center">
    <h1
      class="text-6xl md:text-7xl lg:text-8xl font-display font-bold mb-8 leading-tight tracking-tight"
    >
      {title}
    </h1>

    <p
      class="text-lg md:text-2xl mb-12 text-primary-100 max-w-3xl mx-auto font-light leading-relaxed opacity-95"
    >
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={getRelativeLocaleUrl(lang, "recipes")}
        class="group px-8 py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-gray-50 transition-all duration-300 shadow-lg hover:shadow-2xl hover:-translate-y-0.5 active:scale-95"
      >
        <span class="flex items-center justify-center gap-2">
          {ctaRecipesLabel}
          <svg
            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </span>
      </a>
      <a
        href={getRelativeLocaleUrl(lang, "motivation")}
        class="group px-8 py-4 bg-primary-700 text-white rounded-xl font-semibold hover:bg-primary-800 transition-all duration-300 shadow-lg hover:shadow-2xl hover:-translate-y-0.5 border border-white border-opacity-20 backdrop-blur-sm active:scale-95"
      >
        <span class="flex items-center justify-center gap-2">
          {ctaAlternativesLabel}
          <svg
            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </span>
      </a>
    </div>
  </div>
</section>
