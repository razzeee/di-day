---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getEntry, render } from "astro:content";
import { Image } from "astro:assets";
import romeImage from "../../assets/rome.jpg";
import { LOCALES } from "../../consts";

export function getStaticPaths() {
  return LOCALES.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const entry = await getEntry("pages", `${lang}/alternatives`);
if (!entry) return Astro.redirect("/404");
const { Content } = await render(entry);
---

<BaseLayout
  lang={lang}
  title={`${entry.data.title} | Digital Independence Day`}
  description={entry.data.description}
>
  <!-- Hero section with Rome image -->
  <section
    class="relative bg-gradient-to-br from-primary-600 to-accent-600 text-white py-16 overflow-hidden"
  >
    <div class="absolute inset-0 opacity-30">
      <Image src={romeImage} alt="" class="w-full h-full object-cover" />
    </div>
    <div class="relative container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-display font-bold mb-4">
        {entry.data.title}
      </h1>
      <p class="text-xl text-primary-100">
        {entry.data.description}
      </p>
    </div>
  </section>

  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
  .prose :global(h1) {
    display: none; /* Hide the h1 in the prose as we have it in the hero */
  }

  .prose :global(h2) {
    @apply text-2xl font-display font-bold mt-8 mb-4 text-gray-900 dark:text-gray-100;
  }

  .prose :global(ul) {
    @apply list-disc pl-6 space-y-2;
  }

  .prose :global(li) {
    @apply text-gray-700 dark:text-gray-300;
  }

  .prose :global(strong) {
    @apply font-semibold text-gray-900 dark:text-gray-100;
  }
</style>
