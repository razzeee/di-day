---
import { getRelativeLocaleUrl } from "astro:i18n";
import { ArrowRight, CheckCircle2, Zap } from "lucide-react";
import { Image } from "astro:assets";
import hero2Image from "../../assets/hero2.jpg";

interface Props {
  lang: string;
  title: string;
  p1: string;
  p2: string;
  ctaLabel: string;
}

const { lang, title, p1, p2, ctaLabel } = Astro.props;
---

<section
  class="py-24 md:py-32 bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-950 dark:to-gray-900 relative overflow-hidden"
>
  <!-- Decorative elements -->
  <div
    class="absolute top-0 right-0 -mt-20 -mr-20 w-72 h-72 bg-accent-200 dark:bg-accent-900 rounded-full opacity-20 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 -mb-20 -ml-20 w-72 h-72 bg-primary-200 dark:bg-primary-900 rounded-full opacity-20 blur-3xl"
  >
  </div>

  <div class="container mx-auto px-4 relative">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
      <div>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-12 leading-tight"
        >
          {title}
        </h2>

        <div class="space-y-8">
          <div class="flex gap-6">
            <div class="flex-shrink-0 mt-1">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-xl bg-gradient-to-br from-primary-600 to-primary-700 shadow-lg"
              >
                <CheckCircle2 className="h-7 w-7 text-white" />
              </div>
            </div>
            <div>
              <p
                class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed font-medium"
              >
                {p1}
              </p>
            </div>
          </div>

          <div class="flex gap-6">
            <div class="flex-shrink-0 mt-1">
              <div
                class="flex items-center justify-center h-12 w-12 rounded-xl bg-gradient-to-br from-accent-600 to-accent-700 shadow-lg"
              >
                <Zap className="h-7 w-7 text-white" />
              </div>
            </div>
            <div>
              <p
                class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed font-medium"
              >
                {p2}
              </p>
            </div>
          </div>
        </div>

        <div class="mt-12">
          <a
            href={getRelativeLocaleUrl(lang, "motivation")}
            class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-xl font-semibold hover:from-primary-700 hover:to-primary-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:scale-95"
          >
            {ctaLabel}
            <ArrowRight
              className="size-5 ml-3 group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>

      <div class="relative">
        <div
          class="absolute -inset-4 bg-gradient-to-r from-primary-400 to-accent-400 rounded-3xl opacity-20 blur-2xl"
        >
        </div>
        <div
          class="relative h-96 md:h-full rounded-3xl overflow-hidden shadow-2xl border border-white dark:border-gray-800"
        >
          <Image
            src={hero2Image}
            alt="Digital Independence"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</section>
